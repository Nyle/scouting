<!DOCTYPE html>
<html>
<head>
    <title>Scout Match ${match_number}</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
</head>
<body>
    <h1>Match ${match_number}</h1>
    ${message}
    <form action="${request.route_url('scout_match', match_number=match_number)}" method="post">
        <input type="submit" name="done" value="Done">
        <fieldset>
            <table>
                <tr>
                    <th>Points</th>
                    <th>Red</th>
                    <th>Blue</th>
                </tr>
                <tr>
                    <th>Disc</th>
                    <td><input type="number" min="0" pattern="\d+" name="r_disc" value="${r_points['disc']}" required></td>
                    <td><input type="number" min="0" pattern="\d+" name="b_disc" value="${b_points['disc']}" required></td>
                </tr>
                <tr>
                    <th>Climb</th>
                    <td><input type="number" min="0" pattern="\d+" name="r_climb" value="${r_points['climb']}" required></td>
                    <td><input type="number" min="0" pattern="\d+" name="b_climb" value="${b_points['climb']}" required></td>
                </tr>
                <tr>
                    <th>Foul</th>
                    <td><input type="number" min="0" pattern="\d+" name="r_foul" value="${r_points['foul']}" required></td>
                    <td><input type="number" min="0" pattern="\d+" name="b_foul" value="${b_points['foul']}" required></td>
                </tr>
                <tr>
                    <th>Total</th>
                    <td><input type="number" min="0" pattern="\d+" name="r_total" value="${r_points['total']}" required></td>
                    <td><input type="number" min="0" pattern="\d+" name="b_total" value="${b_points['total']}" required></td>
                </tr>
            </table>
            <label for="comments">Comments/Notes:</label><br>
            <textarea name="comments" rows="2" cols="50" id="comments">${comments}</textarea><br>
        </fieldset>
    </form>
    <h2>Teams</h2>
    <table>
        <tr>
            <th>Red<th>
            <th>Blue</th>
        </tr>
        <tr tal:repeat="(red_number, blue_number) zip(red, blue)">
            <td>${red_number}</td>
            <td>${blue_number}</td>
        </tr>
    </table>
</body>
</html>
