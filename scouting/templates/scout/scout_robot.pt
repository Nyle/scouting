<tal:block metal:use-macro="load: scout_layout.pt">
    <tal:block metal:fill-slot="form">
        <fieldset>
            <ledgend>General:</ledgend><br>
            <label for="description">Description/Notes:</label><br>
            <textarea name="description" rows="2" cols="50" id="description">${robot['description']}</textarea><br>
        </fieldset>
        <fieldset>
            <ledgend>Drivetrain:</ledgend><br>

            <label for="wheels">Wheels:</label><br>
            <textarea name="wheels" rows="2" cols="50" id="wheels">${robot['wheels']}</textarea><br>

            <label for="motors">Drive Motors:</label><br>
            <textarea name="motors" rows="2" cols="50" id="motors">${robot['motors']}</textarea><br>

            <label for="gearbox">Gearbox:</label><br>
            <textarea name="gearbox" rows="2" cols="50" id="gearbox">${robot['gearbox']}</textarea><br>
        </fieldset>
        <fieldset>
            <ledgend>Abilities</ledgend><br>

            <input type="checkbox" tal:attributes="checked robot['can_shoot']" name="can_shoot" id="can_shoot">
            <label for="can_shoot">Shoot/Dump</label><br>

            <input type="checkbox" tal:attributes="checked robot['can_climb']" name="can_climb" id="can_climb">
            <label for="can_climb">Climb</label><br>

            <input type="checkbox" tal:attributes="checked robot['can_human_load']" name="can_human_load" id="can_human_load">
            <label for="can_human_load">Human Loading</label><br>

            <input type="checkbox" tal:attributes="checked robot['can_ground_load']" name="can_ground_load" id="can_ground_load">
            <label for="can_ground_load">Ground Loading</label><br>
        </fieldset>
    </tal:block>
<tal:block>
