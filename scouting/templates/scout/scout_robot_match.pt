<tal:block metal:use-macro="load: scout_layout.pt">
    <tal:block metal:fill-slot="form">
        <label for="robot_match_comments">Comments and Strategy Suggestions</label><br>
        <textarea name="robot_match_comments" rows="2" cols="50" id="robot_match_comments">${robot_match['robot_match_comments']}</textarea><br>
        <fieldset>
            <ledgend>Fouls</ledgend><br>
            <input type="checkbox" tal:attributes="checked robot_match['did_foul']" name="did_foul" id="did_foul">
            <label for="did_foul">Fouled</label><br>

            <input type="checkbox" tal:attributes="checked robot_match['did_technical_foul']" name="did_technical_foul" id="did_technical_foul">
            <label for="did_technical_foul">Technical Fouled</label><br>

            <label for="foul_description">Description of any Fouls</label><br>
            <textarea name="foul_description" rows="2" cols="50" id="foul_description">${robot_match['foul_description']}</textarea><br>
        </fieldset>
        <fieldset>
            <ledgend>Shooting</ledgend><br>
            <input type="checkbox" tal:attributes="checked robot_match['did_shoot']" name="did_shoot" id="did_shoot">
            <label for="did_shoot">Shot</label><br>

            <table>
                <tr>
                    <th>Shots</th>
                    <th>1 pt</th>
                    <th>2 pt</th>
                    <th>3 pt</th>
                    <th>5 pt</th>
                    <th>Missed</th>
                </tr>
                <tr>
                    <th>Auto</th>
                    <td><input type="number" min="0" pattern="\d+" name="auto_1" value="${robot_match['auto_1']}" required></td>
                    <td><input type="number" min="0" pattern="\d+" name="auto_2" value="${robot_match['auto_2']}" required></td>
                    <td><input type="number" min="0" pattern="\d+" name="auto_3" value="${robot_match['auto_3']}" required></td>
                    <td></td>
                    <td><input type="number" min="0" pattern="\d+" name="auto_missed" value="${robot_match['auto_miss']}" required></td>
                <tr>
                <tr>
                    <th>Teleop</th>
                    <td><input type="number" min="0" pattern="\d+" name="teleop_1" value="${robot_match['teleop_1']}" required></td>
                    <td><input type="number" min="0" pattern="\d+" name="teleop_2" value="${robot_match['teleop_2']}" required></td>
                    <td><input type="number" min="0" pattern="\d+" name="teleop_3" value="${robot_match['teleop_3']}" required></td>
                    <td><input type="number" min="0" pattern="\d+" name="teleop_5" value="${robot_match['teleop_5']}" required></td>
                    <td><input type="number" min="0" pattern="\d+" name="auto_missed" value="${robot_match['teleop_miss']}" required></td>
                <tr>
            </table>
            <label for="shooting_description">Description and Comments on the Robot's Shooting</label><br>
            <textarea name="shooting_description" rows="2" cols="50" id="shooting_description">${robot_match['shooting_description']}</textarea><br>
        </fieldset>
        <fieldset>
            <ledgend>Loading</ledgend><br>
            <fieldset>
                <ledgend>Human Loading</ledgend><br>
                <input type="checkbox" tal:attributes="checked robot_match['did_human_load']" name="did_human_load" id="did_human_load">
                <label for="did_human_load">Human Loaded</label><br>

                <label for="frisbees_successfully_human_loaded">Frisbees Successfully Human Loaded</label><br>
                <input type="number" min="0" pattern="\d+" name="frisbees_successfully_human_loaded" value="${robot_match['frisbees_successfully_human_loaded']}" required><br>

                <label for="frisbees_unsuccessfully_human_loaded">Frisbees Unsuccessfully Human Loaded</label><br>
                <input type="number" min="0" pattern="\d+" name="frisbees_unsuccessfully_human_loaded" value="${robot_match['frisbees_unsuccessfully_human_loaded']}" required><br>
            </fieldset>
            <fieldset>
                <ledgend>Ground Loading</ledgend><br>
                <input type="checkbox" tal:attributes="checked robot_match['did_ground_load']" name="did_ground_load" id="did_ground_load">
                <label for="did_ground_load">Ground Loaded</label><br>

                <label for="auto_frisbees_ground_loaded">Frisbees Ground Loaded During Auto</label><br>
                <input type="number" min="0" pattern="\d+" name="auto_frisbees_ground_loaded" value="${robot_match['auto_frisbees_ground_loaded']}" required><br>

                <label for="teleop_frisbees_ground_loaded">Frisbees Ground Loaded During Teleop</label><br>
                <input type="number" min="0" pattern="\d+" name="teleop_frisbees_ground_loaded" value="${robot_match['teleop_frisbees_ground_loaded']}" required><br>
            </fieldset>
            <label for="loading_description">Description and Comments on the Robot's Loading</label><br>
            <textarea name="loading_description" rows="2" cols="50" id="loading_description">${robot_match['loading_description']}</textarea><br>
        </fieldset>
    </tal:block>
</tal:block>

