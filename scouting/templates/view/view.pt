<!DOCTYPE html>
<html>
<head>
    <title>View</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
</head>
<body>
    <a href="${request.route_url('home')}">Back</a>
    <h1>View</h1>
    <h2>Matches</h2>
    <table>
        <tr>
            <th>Number</th>
            <th colspan="3">Red Alliance</th>
            <th colspan="3">Blue Alliance</th>
            <th>Red</th>
            <th>Blue</th>
        </tr>
        <tr tal:repeat="match matches">
            <td>
                <a href="${request.route_url('view_match', match_number=match.match_number)}">
                    ${match.match_number}
                </a>
            </td>
            <td>
                <a href="${request.route_url('view_match', match_number=match.match_number)}">
                    ${match.r_1}
                </a>
            </td>
            <td>
                <a href="${request.route_url('view_match', match_number=match.match_number)}">
                    ${match.r_2}
                </a>
            </td>
            <td>
                <a href="${request.route_url('view_match', match_number=match.match_number)}">
                    ${match.r_3}
                </a>
            </td>
            <td>
                <a href="${request.route_url('view_match', match_number=match.match_number)}">
                    ${match.b_1}
                </a>
            </td>
            <td>
                <a href="${request.route_url('view_match', match_number=match.match_number)}">
                    ${match.b_2}
                </a>
            </td>
            <td>
                <a href="${request.route_url('view_match', match_number=match.match_number)}">
                    ${match.b_3}
                </a>
            </td>
            <td>
                <a href="${request.route_url('view_match', match_number=match.match_number)}">
                    ${match.r_total}
                </a>
            </td>
            <td>
                <a href="${request.route_url('view_match', match_number=match.match_number)}">
                    ${match.b_total}
                </a>
            </td>
        </tr>
    </table>
    <h2>Robots</h2>
    <table>
        <tr tal:repeat="robot robots">
            <td>
                <a href="${request.route_url('view_robot', robot_number=robot.robot_number)}">
                    ${robot.robot_number}
                </a>
            </td>
        </tr>
    </table>
</body>
</html>
